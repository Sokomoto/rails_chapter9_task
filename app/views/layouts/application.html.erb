<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <script src="https://kit.fontawesome.com/47e1c7b983.js" crossorigin="anonymous"></script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="row">
          <nav class="nav navbar-nav navbar-left">
            <span style="color: white;">Bookers</span>
          </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <div class="sign-icon">
                <%= link_to user_path(current_user) do %>
                <i class="fas fa-home"></i>
                <li class="Home">Home</li>
                <% end %>
              </div>
              <div class="sign-icon">
                <%= link_to users_path do %>
                <i class="fas fa-user"></i>
                <li class="User">Users</li>
                <% end %>
              </div>
              <div class="sign-icon">
                <%= link_to books_path do %>
                <i class="fas fa-book"></i>
                <li class="Books">Books</li>
                <% end %>
              </div>
              <div class="sign-icon">
                <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>
                <li class="logout">logout</li>
                <% end %>
              </div>
              <% else %>
              <div class="sign-icon">
                <%= link_to root_path do %>
                <i class="fas fa-home"></i>
                <li class="Home">Home</li>
                <% end %>
              </div>
              <div class="sign-icon">
                <%= link_to home_about_path do %>
                <i class="fas fa-link"></i>
                <li class="About">About</li>
                <% end %>
              </div>
              <div class="sign-icon">
                <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus"></i>
                <li class="sign up">sign up</li>
                <% end %>
              </div>
              <div class="sign-icon">
                <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt"></i>
                <li class="login">login</li>
                <% end %>
              </div>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </nav>
    <div class="container">
      <% if flash[:notice] %>
          <div class="flash">
            <%= flash[:notice] %>
          </div>
      <% end %>
    </div>
  <%= yield %>
  <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
  </footer>
  </body>
</html>